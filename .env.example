# Server Information
# Name of the MCP server
SERVER_NAME=mentor-mcp-server

# Version of the MCP server
SERVER_VERSION=0.1.0

# Server Capabilities
# Enable resources capability (true/false)
ENABLE_RESOURCES=true

# Enable tools capability (true/false)
ENABLE_TOOLS=true

# Enable prompts capability (true/false)
ENABLE_PROMPTS=true

# Transport Configuration
# Transport type: 'stdio' or 'sse'
TRANSPORT_TYPE=stdio

# Port for the SSE transport (if using SSE)
PORT=3000

# Neo4j Configuration
# URI for connecting to Neo4j database
NEO4J_URI=bolt://localhost:7687

# Username for Neo4j database connection
NEO4J_USERNAME=neo4j

# Password for Neo4j database connection
NEO4J_PASSWORD=password

# LLM Configuration with LangChain
# Provider for LLM service: 'anthropic' or 'openai'
LLM_PROVIDER=anthropic

# API key for LLM service
LLM_API_KEY=your_api_key_here

# Model name (e.g., "claude-3-opus-20240229" or "gpt-4")
LLM_MODEL_NAME=claude-3-opus-20240229

# Temperature setting for LLM (0-1)
LLM_TEMPERATURE=0

# Endpoint for LLM service (optional, uses default if not specified)
LLM_ENDPOINT=https://api.anthropic.com/v1/messages

# Maximum tokens for LLM (optional, uses default if not specified)
LLM_MAX_TOKENS=1000

# Logger Configuration
# Valid values: error, warn, info, debug
LOG_LEVEL=info

# Directory where log files will be stored
LOG_DIR=logs

# Name of the main log file that contains all log levels
LOG_FILE=combined.log

# Name of the log file that contains only errors
ERROR_LOG_FILE=error.log

# Enable file logging even in development mode (true/false)
ENABLE_FILE_LOGGING=false

# Node Environment (development, production, test)
NODE_ENV=development